SELECT * WHERE {
	SERVICE <http://dbpedia.org/sparql> {
		<http://dbpedia.org/resource/Berlin> geo:lat ?lat ; geo:long ?long .
	}
	BIND ( "temperature_2m,wind_speed_10m" AS ?req)
	SERVICE <https://api.open-meteo.com/v1/forecast> PARAMS(?lat AS "latitude", ?long AS "longitude", ?req AS "current") {
		?x ex:temperature ?temp .
		?x ex:windSpeed ?wind .
	}
}

